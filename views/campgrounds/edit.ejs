<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Edit Campground</title>
</head>
<body>
<main>
    <form action="/campgrounds/<%=campground._id%>?_method=PATCH" method="POST">
        <div>
            <label for="title">Title</label>
            <input type="text" id="title" name="campground[title]" value="<%=campground.title%>">
        </div>
        <div>
            <label for="number">Price</label>
            <input type="number" id="price" step="1" name="campground[price]" value="<%=campground.price%>">
        </div>
        <div>
            <label for="location">Location</label>
            <input type="text" id="location" name="campground[location]" value="<%=campground.location%>">
        </div>
        <button>Save</button>
    </form>
</main>
</body>
</html>
