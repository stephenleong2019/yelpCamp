<% layout('/layouts/boilerplate') %>
<main>
    <h1>All Campground</h1>
    <ul>
        <% for (let campground of campgrounds){ %>

            <div class="card mb-3 shadow-lg p-3 mb-5 bg-white rounded-3">
                <div class="row">
                    <div class="col-md-4">
                        <img src="<%= campground.images[0].url %>"
                                alt="https://miro.medium.com/max/2400/1*hFwwQAW45673VGKrMPE2qQ.png"
                                class="img-fluid rounded-3">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%= campground.title %></h5>
                            <p class="card-text"><%= campground.description %></p>
                            <p class="card-text text-muted">
                                <svg xmlns="http://www.w3.org/2000/svg"
                                        width="16"
                                        height="16"
                                        fill="currentColor"
                                        class="bi bi-geo-alt-fill"
                                        viewBox="0 0 16 16">
                                    <path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10zm0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6z" />
                                </svg>
                                <small><%= campground.location %></small></p>
                            <a href="/campgrounds/<%= campground._id %>"
                                    class="btn btn-primary">View <%= campground.title %></a>
                        </div>
                    </div>

                </div>
            </div>
        <% } %>
    </ul>
</main>

